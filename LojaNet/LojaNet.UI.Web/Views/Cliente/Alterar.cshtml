@model LojaNet.Models.Cliente

@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar</h2>

<form method="post" class="form-horizontal">


    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label class="control-label" for="Nome">Nome:</label>
        <input class="form-control" type="text" name="Nome" value="@Model.Nome" /><!--value = Model.Nome não vai apagar a informação do campo-->
    </div>
    <div class="form-group">
        <label class="control-label" for="Telefone">Telefone:</label>
        <input class="form-control" type="text" name="Telefone" value="@Model.Telefone" />
    </div>
    <div class="form-group">
        <label class="control-label" for="Email">Email</label>
        <input class="form-control" type="text" name="Email" value="@Model.Email" />
    </div>

    <div class="form-group">
        <a href="/Cliente/Index" class="btn btn-default"> Voltar</a>
        <input class="btn btn-default" type="submit" value="Gravar" />
    </div>
    <!--Valida os campos-->
    @Html.ValidationSummary(null, new { @class = "text-danger" })
</form>

